<!--pages/mycourse/mycourse.wxml-->
<import src="/components/wxSearch/wxSearch.wxml"/>
<view class="wxSearch-section">
      <view class="wxSearch-pancel">
          <input bindinput="wxSearchInput" bindfocus="wxSerchFocus" value="{{wxSearchData.value}}" bindblur="wxSearchBlur" class="wxSearch-input" placeholder="课程名称" />
          <button class="wxSearch-button" bindtap="wxSearchFn" size="mini" plain="true">搜索</button>
      </view>
</view>
<template is="wxSearch" data="{{wxSearchData}}"/>

<import src="/components/card/card.wxml"/>

<view wx:for="{{course_array}}">

  <view class="box flex-row container">
    <view class='course-img-view'>
      <image class='course-img' src='{{item.course_img_url}}'></image>
    </view>
    <view class="course-discription-view flex-column">
      <view class="course-name">{{item.course_name}}</view>
      <view class="teacher"><text>任课教师：\n{{item.teacher}}  {{item.school}}</text></view>
    </view>
    
  </view>

</view>
