/* pages/mycourse/mycourse.wxss */

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box {
  box-sizing: border-box;
}

.container {
  height: auto;
  padding: 15rpx 35rpx;
  align-items: center;
  font-size: 1em;
  /*background-color: #8bc34a;*/
  background-color: #f7f7f7;
  border-radius: 30rpx;
  border: solid 2rpx #8bc34a;
  margin: 15rpx;
}

.course-img{
  width: 100%;
  height: 100%;
}
.course-img-view{
  width: 40%;
  height: 200rpx;
  align-items: center;
}

.course-discription-view{
  width: 60%;
  height: 200rpx;
  padding-left: 25rpx;
  align-items: flex-start;
}

.course-name{
  font-size: 16pt;
  margin-bottom: 10rpx;
}

.teacher{
  font-size: 10pt;
  color: gray;
}
