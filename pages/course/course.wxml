<!--pages/course/course.wxml-->
<view class='page'>
  <view class='page_hd'>
    <view class="box flex-row container">
      <view class='course-img-view'>
        <image class='course-img' src='{{curCourse.course_img_url}}'></image>
      </view>
      <view class="course-discription-view">
        <textarea class="course-name" disabled='true' auto-height='true'>{{curCourse.course_name}}</textarea>
      </view>
    </view>

    <view class="weui-tab">
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">PHOTO</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">BLOG</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">PHOTO</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 3}}">BLOG</view>
      </view>
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
        <view class="weui-navbar__slider" ></view>
      </view>
  </view>

  </view>
</view>
